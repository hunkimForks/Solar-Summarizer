{
    "name": "Solar Summarizer",
    "version": "2024.07.11",
    "description": "A Chrome extension that utilizes SolarLLM to provide a summarized version of web articles.",
    "manifest_version": 3,
    "author": "M.Ho3ein Beshavard, Sung Kim",
    "icons": {
        "16": "assets/icons/icon-16.png",
        "32": "assets/icons/icon-32.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icons/*.png",
                "assets/css/main.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {},
    "host_permissions": [
        "https://*.upstage.ai/*"
    ],
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ]
}